include lib

doctype html
include html
  head
    include head
  body
    #wrap.boxed
      header
        if oldVersion
          .flash
              | <b>Heads Up!</b> You're viewing the docs for <b>v#{self.version}</b>, an old version of Karma.
              | <a href="/#{self.newUrl}"><b>v#{versions[0]}</b> is the newest</a>.
        .container.clearfix
          .six.columns
            .logo
              a(href='/#{self.version}/index.html')
                img(src='/assets/img/banner.png', alt='Karma - Spectacular Test Runner for JavaScript', title='Karma - Spectacular Test Runner for JavaScript')
          .ten.columns
            nav#menu.navigation
              ul#nav
                mixin navigation(self, menu)
                mixin versionDropdown(versions, self.version)
          .sixteen.columns
            hr

      block content
        .container.clearfix
          .sixteen.columns
            h1.page-title
              = self.pageTitle
              if editButton
                a.edit(href='#{self.editUrl}', data-tooltip='Edit this page on GitHub')
                  i.icon-edit
              span.line
          .page-columns
            #markdown.sixteen.columns.bottom
              != self.content
      .push
    footer
      .container
        include footer

  // Placed at the end of the document so the pages load faster
  include scripts

  // Google Analytics
  include analytics
