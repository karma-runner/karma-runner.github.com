include lib

!!! 5
include html
  head
    include head
  body
    #wrap.boxed
      header
        .container.clearfix
          .six.columns
            .logo
              a(href='/#{self.version}/index.html') Testacular
              span Spectacular Test Runner for JavaScript
          .ten.columns
            nav#menu.navigation
              ul#nav
                mixin navigation(self, menu)
                mixin versionDropdown(versions, self.version)
          .sixteen.columns
            hr

      block content
        .container.clearfix
          .sixteen.columns
            h1.page-title
              = self.pageTitle
              a.edit(href='#{self.editUrl}', data-tooltip='Edit')
                i.icon-cogs
              span.line
          .page-columns
            #markdown.sixteen.columns.bottom
              != self.content
      .push
    footer
      .container
        include footer

  // Placed at the end of the document so the pages load faster
  include scripts
